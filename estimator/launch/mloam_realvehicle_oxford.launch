<launch>
    <!-- sensor setup: https://oxford-robotics-institute.github.io/radar-robotcar-dataset/documentation/ -->
    <arg name="bag_file_use" default="true" />
    <arg name="bag_file" default="/Monster/dataset/oxford_radar_dataset/2019-01-10-14-36-48-radar-oxford-10k-partial/data_distort.bag" /> 

    <param name="use_sim_time" value="true" />
    <group if="$(arg bag_file_use)">
        <node pkg="rosbag" type="play" name="rosbag" args="--clock --pause -r 0.5 $(arg bag_file)" />    
    </group>    

    <include file="$(find rviz_car_model)/launch/default.launch" />

    <arg name="run_mloam" default="true" />
    <arg name="run_mloam_odom" default="true" />
    <arg name="run_mloam_mapping" default="true" />    
    <arg name="run_aloam" default="false" />
    <arg name="run_legoloam" default="false" />

    <arg name="data_source" default="bag"/>
    <arg name="result_save" default="false"/>
    <arg name="output_path" default="/home/jjiao/trajectory_results/real_vehicle/oxford/20190110_small/"/>
    <arg name="with_ua" default="true" /> <!-- awareness of uncertainty propagation-->    
    <arg name="gf_ratio" default="1" />    

    <arg name="config_file" default="$(find mloam)/config/config_realvehicle_oxford.yaml" />
    <group if="$(arg run_mloam)">
        <group if="$(arg run_mloam_odom)">
            <node pkg="mloam" type="mloam_node_rv_oxford" name="mloam_node_rv_oxford" 
                args="-config_file=$(arg config_file)
                    -data_source=$(arg data_source)
                    -result_save=$(arg result_save)
                    -output_path=$(arg output_path)">
                <remap from="/base_pose_gt" to="/current_odom"/>
            </node>
        </group>
        <group if="$(arg run_mloam_mapping)">
            <node pkg="mloam" type="lidar_mapper" name="lidar_mapper"
                args="-config_file=$(arg config_file)
                      -result_save=$(arg result_save) 
                      -output_path=$(arg output_path)
                      -with_ua=$(arg with_ua)
                      -gf_ratio=$(arg gf_ratio)" output="screen">
                <remap from="/laser_odom" to="/laser_odom_0"/>
            </node>
        </group>
    </group>

    <!-- publish static tf -->
    <!-- x y z yaw pitch roll -->
    <!-- x y z qx qy qz qw -->
    <node name="static_tf_world_into_world_base_sensor" pkg="tf" type="static_transform_publisher"
        args="0 0 1.5 0 0 0 1 world_base world 10"/>
    <node name="static_tf_world_sensor_into_base_sensor" pkg="tf" type="static_transform_publisher"
        args="0 0 0 0 0 0 1 world laser_0 10"/>
    <node name="static_tf_base_sensor_into_base_sensor_bag" pkg="tf" type="static_transform_publisher"
        args="0 0 0 0 0 0 1 laser_0 velo_left 10"/>        
    <node name="static_tf_base_sensor2_into_base_sensor2_bag" pkg="tf" type="static_transform_publisher"
        args="0 0 0 0 0 0 1 laser_1 velo_right 10"/>                
    <node name="static_tf_base_link_into_base_sensor" pkg="tf" type="static_transform_publisher"
        args="0 0 -1.5 0 0 0 1 aft_mapped base_link 10"/>                

    <!-- -->
    <!-- merge cloud -->
    <group unless="$(arg run_mloam)">
        <node pkg="mloam" type="test_merge_pointcloud_oxford" name="test_merge_pointcloud_oxford"/>      
        <node name="static_tf_world_sensor_into_camera" pkg="tf" type="static_transform_publisher"
            args="0 0 0 0 0 0 1 world camera_init 10"/>            
    </group>

    <!-- run aloam  -->
    <group if="$(arg run_aloam)">
        <include file="$(find aloam_velodyne)/launch/aloam_exp.launch">
            <arg name="aloam_odom_path" default="/home/jjiao/trajectory_results/real_vehicle/oxford/20190110_small/stamped_aloam_odom_estimate.txt"/>
            <arg name="aloam_map_path" default="/home/jjiao/trajectory_results/real_vehicle/oxford/20190110_small/stamped_aloam_map_estimate.txt"/>
        </include>       
   </group>        

    <!-- run legoloam  -->
    <group if="$(arg run_legoloam)">
        <include file="$(find lego_loam)/launch/legoloam_exp.launch">
            <arg name="lego_loam_odom_path" default="/home/jjiao/trajectory_results/real_vehicle/oxford/20190110_small/stamped_legoloam_odom_estimate.txt"/>
            <arg name="lego_loam_map_path" default="/home/jjiao/trajectory_results/real_vehicle/oxford/20190110_small/stamped_legoloam_map_estimate.txt"/>
        </include>
    </group>  

 </launch>
