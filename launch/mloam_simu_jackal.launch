<launch>

    <arg name="bag_file_use" default="true" />
    <arg name="config_file" default="$(find mloam)/../config/config_simu_jackal.yaml" />

    <arg name="run_mloam" default="true" />
    <arg name="run_aloam" default="false" />

    <arg name="run_mloam_map_up" default="false" /> <!-- uncertainty propagation -->    
    <arg name="mloam_result_save" default="1" />
    
    <arg name="output_path" default="/home/jjiao/catkin_ws/src/localization/rpg_trajectory_evaluation/results/simu_jackal_mloam/test/mloam/SR05/" />
    <arg name="mloam_gt_path" default="stamped_groundtruth.txt" />    
    <arg name="mloam_odom_path" default="stamped_mloam_odom_estimate.txt" />
    <arg name="mloam_map_path" default="stamped_mloam_map_estimate.txt" /> 
    <arg name="mloam_map_wo_up_path" default="stamped_mloam_map_wo_up_estiamte.txt" /> 

    <param name="use_sim_time" value="true" />

    <!-- Ros Bag -->
    <group if="$(arg bag_file_use)">
        <arg name="bag_file" default="/Monster/dataset/lidar_calibration/mloam_jackal_simu_rect_box/eight.bag" />
        <!-- <arg name="bag_file" default="/Monster/dataset/lidar_calibration/mloam_jackal_simu_rect_box/circle.bag" /> -->
        <!-- <arg name="bag_file" default="/Monster/dataset/lidar_calibration/mloam_jackal_simu_rect_box/random_walk_slow_1.bag" /> -->
        <!-- <arg name="bag_file" default="/Monster/dataset/lidar_calibration/mloam_jackal_simu_rect_box/random_walk_slow_2.bag" /> -->
        <!-- <arg name="bag_file" default="/Monster/dataset/lidar_calibration/mloam_jackal_simu_rect_box/random_walk_slow_3.bag" /> -->
        <node pkg="rosbag" type="play" name="rosbag" args="$(arg bag_file) --clock -r 1 --pause" />
    </group>

    <group if="$(arg run_mloam)">
        <node pkg="mloam" type="mloam_node_sr" name="mloam_node_sr" 
            args="$(arg config_file) $(arg mloam_result_save) $(arg output_path) $(arg mloam_odom_path) $(arg mloam_gt_path)" />

        <group if="$(arg run_mloam_map_up)">
            <node pkg="mloam" type="lidar_mapper" name="lidar_mapper" 
                args="$(arg config_file) $(arg mloam_result_save) $(arg output_path) $(arg mloam_map_path) 1" output="screen"/>
        </group>
        <group unless="$(arg run_mloam_map_up)">
            <node pkg="mloam" type="lidar_mapper" name="lidar_mapper" 
                args="$(arg config_file) $(arg mloam_result_save) $(arg output_path) $(arg mloam_map_wo_up_path) 0" output="screen"/>        
        </group>
    </group>

    <!-- publish static tf -->
    <!-- x y z yaw pitch roll -->
    <!-- x y z qx qy qz qw -->
    <!-- world_base: the base_link of the robot; world_base->world, world->laser_0     -->
    <node name="static_tf_world_base_into_world_sensor" pkg="tf" type="static_transform_publisher"
        args="0 0.266 0.734 -0.216 0 0 0.976 world_base world 10"/>
    <node name="static_tf_world_sensor_into_base_sensor" pkg="tf" type="static_transform_publisher"
        args="0 0 0 0 0 0 1 world laser_0 10"/>

    <group if="$(arg run_aloam)">
        <include file="$(find aloam_velodyne)/launch/aloam_simu_jackal.launch">
            <arg name="aloam_odom_path" default="/home/jjiao/catkin_ws/src/localization/rpg_trajectory_evaluation/results/simu_jackal_mloam/test/mloam/SR05/stamped_aloam_odom_estimate.txt"/>
            <arg name="aloam_map_path" default="/home/jjiao/catkin_ws/src/localization/rpg_trajectory_evaluation/results/simu_jackal_mloam/test/mloam/SR05/stamped_aloam_map_estimate.txt"/>
        </include>
    </group>        

</launch>
